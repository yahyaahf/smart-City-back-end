                <groupId>com.heroku.sdk</groupId>
                <artifactId>heroku-maven-plugin</artifactId>
                <configuration>
                    <appName>smartcityy</appName>
                    <processTypes>
                        <web>java -jar output\smart-city-1.2-SNAPSHOT-jar-with-dependencies.jar</web>
                    </processTypes>
                </configuration>
                <version>3.0.3</version>
